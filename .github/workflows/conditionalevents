name: Conditional Events

on: push

jobs:
  build:
    if: (github.ref == 'refs/heads/main' || github.ref == 'refs/heads/develop') && (github.event_name == 'push' || github.event_name == 'pull_request')
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        # if: github.ref == 'refs/heads/main' && github.event_name == 'push'
        uses: actions/checkout@v4
